<Window x:Class="WpfEfAuthen.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Registration" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Register" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="txtRegisterUsername" Width="250" />
            <PasswordBox Name="txtRegisterPassword" Width="250"/>
            <Button Content="Register" Name="btnRegister" Click="RegisterButton_Click" Width="250"/>
        </StackPanel>
    </Grid>
</Window>
