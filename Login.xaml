<Window x:Class="WpfEfAuthen.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEfAuthen"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="20" FontWeight="Bold"/>
            <TextBox x:Name="txtLoginUsername" Width="250" />
            <PasswordBox x:Name="txtLoginPassword" Width="250"/>
            <Button Content="Login" Click="LoginButton_Click" Width="250"/>
        </StackPanel>
    </Grid>

</Window>
