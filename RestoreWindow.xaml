<Window x:Class="WpfEfAuthen.RestoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEfAuthen"
        mc:Ignorable="d"
        Title="RestoreWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Restore Database" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="Select Database file" Name="btnBrowse" Click="btnBrowse_Click" Width="250"/>
            <!--<Button Content="Restore Now" Click="btnRestore_Click" Name="btnRestore" Width="250"/>-->
        </StackPanel>
    </Grid>
</Window>
