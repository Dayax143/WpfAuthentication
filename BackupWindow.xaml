<Window x:Class="WpfEfAuthen.BackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEfAuthen"
        mc:Ignorable="d"
        Title="BackupWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <TextBlock Text="Backup Database" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0" />
            <Button Content="Choose Backup Location" Grid.Row="0" Name="btnBrowseFolder" Width="200" Height="60" Click="btnBrowseFolder_Click"/>
            <TextBlock Text="Restore Database" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="1"/>
            <Button Name="btnRestore" Click="btnRestore_Click" Grid.Row="1" Width="200" Height="60">Restore</Button>
        
    </Grid>
</Window>
