<Window x:Class="WpfEfAuthen.BackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEfAuthen"
        mc:Ignorable="d"
        Title="BackupWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Backup Database" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="Choose Backup Location" Name="btnBrowseFolder" Click="btnBrowseFolder_Click" Width="250"/>
            <TextBlock Text="Selected path" Name="lblBrowsedPath" FontSize="20" FontWeight="Bold" />
            <Button Content="Save Path" Name="btnSavePath" Click="btnSavePath_Click" Width="250"/>
            <Button Content="Backup Now" Name="btnBackup" Click="btnBackup_Click" Width="250"/>
        </StackPanel>
    </Grid>
</Window>
